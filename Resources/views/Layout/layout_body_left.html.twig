<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
    <head>
        <meta http-equiv="content-type" content="text/html;charset=utf-8">
        <title>{% block title %}{% endblock %}</title>

		{% block stylesheets %}
		<link href="{{ asset('bundles/ccdncomponentcommon/css/layout_body_left.css') }}" rel="stylesheet" type="text/css">
		<link href="{{ asset('bundles/ccdncomponentcommon/css/common_elements.css') }}" rel="stylesheet" type="text/css">
		{% endblock %}
		
		{% block javascripts %}
		<script src="{{ asset('bundles/ccdncomponentcommon/js/jquery-1.7.1.min.js') }}" type="text/javascript"></script>
		{% endblock %}
    </head>
    <body>
		
		<div id="header">
			<div id="secondary_bar">
				<a class="nav_link" href="{{ path('cc_members_index') }}">{{ 'layout.header_links.members' | trans({}, 'CCDNComponentCommonBundle') }}</a>
				<a class="nav_link" href="{{ path('cc_forum_category_index') }}">{{ 'layout.header_links.forum' | trans({}, 'CCDNComponentCommonBundle') }}</a>
			{#	<a class="nav_link" href="">{{ 'layout.header_links.downloads' | trans({}, 'CCDNComponentCommonBundle') }}</a>
				<a class="nav_link" href="">{{ 'layout.header_links.answers' | trans({}, 'CCDNComponentCommonBundle') }}</a>
				<a class="nav_link" href="">{{ 'layout.header_links.articles' | trans({}, 'CCDNComponentCommonBundle') }}</a>
				<a class="nav_link" href="">{{ 'layout.header_links.knowledge_base' | trans({}, 'CCDNComponentCommonBundle') }}</a>#}
			</div>			
			
			<div id="primary_bar">
				<div id="logo"><img class="site_logo" width="212" height="25" src="{{ asset('bundles/ccdncomponentcommon/images/layout/header/logo.png') }}" alt="site logo"></div>
				{% if is_granted('ROLE_USER') %}
				<div class="bar_box" id="login"><a class="primary_bar" href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout' |trans({}, 'FOSUserBundle') }}</a></div>
				<div class="bar_box" id="register"><a class="primary_bar" href="{{ path('cc_profile_show') }}">{{ app.user.username }}</a></div>		
				<div class="bar_box" id="inbox">
					<a class="primary_bar" href="{{ path('cc_message_index') }}">
						<img class="icon_16x16" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Silver/16x16/16x16_email.png') }}" alt="inbox">
						{{ unreadMessageCount() }}
					</a>
				</div>
				{% else %}
				<div class="bar_box" id="login"><a class="primary_bar" href="{{ path('fos_user_security_login') }}">{{ 'layout.login' |trans({}, 'FOSUserBundle') }}</a></div>
				<div class="bar_box" id="register"><a class="primary_bar" href="{{ path('fos_user_registration_register') }}">{{ 'layout.register' |trans({}, 'FOSUserBundle') }}</a></div>
				{% endif %}
			</div>
			
		</div>
		
		<div id="body">
	        <div class="left_column_container">
				<div class="left_column">
					<div id="top"></div>
		            {% block body %}{% endblock %}
				</div>
	        </div>

	        <div class="right_column_container">
				<div class="right_column">
		            {% block sidebar %}
		            {% endblock %}
				</div>
	        </div>
		</div>
		
		<div id="footer">
		</div>
		
    </body>
</html>